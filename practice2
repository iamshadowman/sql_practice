-- PRACTICE 2

CREATE TABLE STATION(
  ID INT PRIMARY KEY,
  CITY VARCHAR(21),
  STATE VARCHAR(2),
  LAT_N INT,
  LONG_E INT
);

INSERT INTO STATION
(ID,CITY,STATE,LAT_N,LONG_E)
